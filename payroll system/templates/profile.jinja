<html>
    <head>
        <title>Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body style = "background-image: url('https://i.pinimg.com/736x/03/d9/fb/03d9fb529bfa58837ebe66e132032010.jpg'); background-size: cover;">
        <table class="table table-dark">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Details</th>
              <th scope="col">Information</th>
            </tr>
          </thead>
          <tbody>
                {% for x in [["id", user.id], ["name", user.name], ["username", user.uname], ["password", user.password], ["salary", user.salary], ["balance", user.balance], ["attendance", user.attendance], ["level", user.level], ["rating", user.rating]] %}
                    <tr>
                        <td>{{x[0]}}</td>
                        <td>{{x[1]}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td>Update</td>
                    {% if s.is_admin() %}
                        <td><a class="btn btn-primary" href="{{url_for('ruser', cname=user.company.name, status=do, name=user.uname)}}" role="button">Update Profile</a></td>
                    {% else %}
                        <td><a class="btn btn-primary" href="{{url_for('uuser', cname=user.company.name, name=user.uname)}}" role="button">Update Profile</a></td>
                    {% endif %}
                </tr>
                <tr>
                    <td>Action:</td>
                    {% if not s.is_admin() %}
                        <td><a class="btn btn-primary" href="{{url_for('index')}}" role="button">Logout</a></td>
                    {% else %}
                        <td><a class="btn btn-primary" href="{{url_for('delete', cname = user.company.name, name=user.uname)}}" role="button">Delete User</a></td>
                    {% endif %}
                </tr>
          </tbody>
        </table>
    </body>
</html>